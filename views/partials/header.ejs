    width: 100%;
    margin: 0 auto;
    position: relative;
    display: flex;
  }

  logo-slider div {
    display: flex;
    position: relative;
    animation: marquee 15s linear infinite;
    justify-content: space-around;
  }

  logo-slider img {
    display: block;
    min-width: var(--image-size);
    height: var(--image-size);
