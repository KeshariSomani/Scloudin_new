  }

  .carousel-item {
    flex: 0 0 100%;
    width: 100%;
    height: 400px;
    /* Set your desired height */
    background-color: #FFF;
    text-align: center;
    display: flex;
    justify-content: center;
    align-items: center;
    
  }

  .prev-button,
  .next-button {
    position: absolute;
    top: 50%;
    transform: translateY(-50%);
    color: #fff;
    border: none;
    cursor: pointer;

    
  }

  .next-button {
