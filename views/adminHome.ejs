<%-include('partials/header')%>
<section class="my-5">
    <p class="text-2xl text-center font-bold">Header Mail Section</p>
    <div class="flex justify-around bg-gray-300 border-2 border-gray-600 p-5 my-5">
        <p><%=header_email.header_email%></p>
        <button class="bg-blue-500 p-2 text-white border-2 border-blue-600" onclick="header_maiL_update('<%=header_email._id%>')">Update</button>
    </div>
</section>
<div class="h-1 p-1 bg-gray-800 w-full"></div>
<section class="my-5">
  <p class="text-2xl text-center font-bold">Banner Section</p>
  <div class="p-2 bg-blue-500 border-2 bg-blue-800 mx-auto w-fit text-white font-bold cursor-pointer " onclick="add_banner_image()">
     <p> Add Banner Image + </p>
  </div>
  <div class="flex flex-wrap p-5 gap-10">
    <% banner_data.forEach(item => { %>
         <div class="">
             <a href="/delete_banner_image?banner_id=<%=item._id%>">
             <div class="bg-red-500 text-white font-bold text-center border-2 border-red-800 p-2 cursor-pointer"><p>Delete Image</p></div>
             </a>
             <img src="../public/bannerImages/<%=item.banner_image_url%>" class="w-[200px] h-[200px]">
         </div>
      <% }); %>
  </div>
</section>

<div class="h-1 p-1 bg-gray-800 w-full"></div>

<section class="my-5">
    <p class="text-center text-2xl font-bold">About Section</p>
    <div class="bg-blue-500 border-2 border-blue-800 text-white font-bold p-2 w-fit mx-auto my-2 cursor-pointer" onclick="update_about_content('<%=about_content._id%>')">Update Content</div>
    <div class="p-5">
        <p > <span class="text-xl font-bold">Heading :</span> <%=about_content.about_heading%></p>
        <p>
            <span class="text-xl font-bold">Description :</span>
            <br>
             <%=about_content.about_description%>
        </p>
    </div>

</section>

<div class="h-1 p-1 bg-gray-800 w-full"></div>


<section class="my-5">

    <p class="text-center font-bold text-2xl">Product Section</p>
    
</section>





<div id="update_form">

</div>

<script>
   function header_maiL_update(id)
   {
       document.getElementById('update_form').innerHTML=`<div style=" background: linear-gradient(to bottom, rgba(0, 0, 0, 0.25), rgba(0, 0, 0, 0.25))" class="w-[100vw] h-[100vh] flex justify-center items-center top-0 bg-[rgba(0, 0, 0, 0.25)] top-0 bottom-0 fixed overflow-y-scroll z-30
overflow-hidden" id="popupcontestForm">
      <div
          class="relative lg:w-[50%] w-[80%] bg-white mx-auto bg-[#fff]  top-10  z-30   rounded-[1.25rem] shadow-md ">
          <p class="absolute top-3 right-5 w-6 text-xl font-bold cursor-pointer" alt="cross icon"
              id="closecontestForm">X</p>
          <div class="lg:w-full h-fit py-5 bg-[#fff]   rounded-[1.25rem] mt-5">
              <form action="/update_header_email" method="post" class="flex justify-center items-center flex-col"
                  id="contestForm"> 
                  <div class="mb-2 w-[90%] flex flex-col gap-2">
                      <label for="profession" class="blocktext-[#4F2D5E] text-[22px] font-semibold mb-2">Email<span
                              class="text-[#FC1919]">*</span></label>
                      <input type="hidden" name="id" value="${id}">
                      <input type="text" id="profession" name="email"
                          class="w-full px-4 py-2 border-gray-900 border-[2px] rounded-lg focus:outline-none focus:border-blue-500"
                          required>
                  </div>
                  <div class="mt-4 w-[90%]">
                      <button type="submit"
                          class="px-4 py-3 text-[1.4rem] font-[500] bg-[#FF9953] text-white rounded-md w-[100%] mx-auto text-center"
                          id="contestFormSubmit">Update</button>
                  </div>
              </form>
          </div>
      </div>

  </div>
`
  document.getElementById('closecontestForm').addEventListener('click', () => {
      document.getElementById('popupcontestForm').classList.add('hidden')
   })
}


function add_banner_image()
{
    document.getElementById('update_form').innerHTML= `<div style=" background: linear-gradient(to bottom, rgba(0, 0, 0, 0.25), rgba(0, 0, 0, 0.25))" class="w-[100vw] h-[100vh] flex justify-center items-center top-0 bg-[rgba(0, 0, 0, 0.25)] top-0 bottom-0 fixed overflow-y-scroll z-30
overflow-hidden" id="popupcontestForm">
      <div
          class="relative lg:w-[50%] w-[80%] bg-white mx-auto bg-[#fff]  top-10  z-30   rounded-[1.25rem] shadow-md ">
          <p class="absolute top-3 right-5 w-6 text-xl font-bold cursor-pointer" alt="cross icon"
              id="closecontestForm">X</p>
          <div class="lg:w-full h-fit py-5 bg-[#fff]   rounded-[1.25rem] mt-5">
              <form action="/add_banner_image" method="post" class="flex justify-center items-center flex-col"
                  id="contestForm" enctype="multipart/form-data"> 
                  <div class="mb-2 w-[90%] flex flex-col gap-2">
                      <label for="profession" class="blocktext-[#4F2D5E] text-[22px] font-semibold mb-2">Banner Image<span
                              class="text-[#FC1919]">*</span></label>
                      
                      <input type="file" id="profession" name="banner_image"
                          class="w-full px-4 py-2 border-gray-900 border-[2px] rounded-lg focus:outline-none focus:border-blue-500"
                          required>
                  </div>
                  <div class="mt-4 w-[90%]">
                      <button type="submit"
                          class="px-4 py-3 text-[1.4rem] font-[500] bg-[#FF9953] text-white rounded-md w-[100%] mx-auto text-center"
                          id="contestFormSubmit">Add</button>
                  </div>
              </form>
          </div>
      </div>

  </div>
`
    document.getElementById('closecontestForm').addEventListener('click', () => {
        document.getElementById('popupcontestForm').classList.add('hidden')
     })
}


function update_about_content(id)
{
    document.getElementById('update_form').innerHTML = `<div style=" background: linear-gradient(to bottom, rgba(0, 0, 0, 0.25), rgba(0, 0, 0, 0.25))" class="w-[100vw] h-[100vh] flex justify-center items-center top-0 bg-[rgba(0, 0, 0, 0.25)] top-0 bottom-0 fixed overflow-y-scroll z-30
overflow-hidden" id="popupcontestForm">
      <div
          class="relative lg:w-[50%] w-[80%] bg-white mx-auto bg-[#fff]  top-10  z-30   rounded-[1.25rem] shadow-md ">
          <p class="absolute top-3 right-5 w-6 text-xl font-bold cursor-pointer" alt="cross icon"
              id="closecontestForm">X</p>
          <div class="lg:w-full h-fit py-5 bg-[#fff]   rounded-[1.25rem] mt-5">
              <form action="/update_about_content" method="post" class="flex justify-center items-center flex-col"
                  id="contestForm"> 
                  <div class="mb-2 w-[90%] flex flex-col gap-2">
                      <label for="profession" class="blocktext-[#4F2D5E] text-[22px] font-semibold mb-2">About Heading<span
                              class="text-[#FC1919]">*</span></label>
                     <input type="hidden" name="id" value="${id}">
                      
                      <input type="text" id="profession" name="about_heading"
                          class="w-full px-4 py-2 border-gray-900 border-[2px] rounded-lg focus:outline-none focus:border-blue-500"
                          required >
                  </div>
                  <div class="mb-2 w-[90%] flex flex-col gap-2">
                      <label for="profession" class="blocktext-[#4F2D5E] text-[22px] font-semibold mb-2">About Description<span
                              class="text-[#FC1919]">*</span></label>
                      
                      <textarea  id="about_description" name="about_description"
                          class="w-full border-2 border-gray-900 p-0 m-0 rows="10" cols="50"
                          required >
                        </textarea>
                        
                  </div>
                  <div class="mt-4 w-[90%]">
                      <button type="submit"
                          class="px-4 py-3 text-[1.4rem] font-[500] bg-[#FF9953] text-white rounded-md w-[100%] mx-auto text-center"
                          id="contestFormSubmit">Update</button>
                  </div>
              </form>
          </div>
      </div>

  </div>
`
    document.getElementById('closecontestForm').addEventListener('click', () => {
        document.getElementById('popupcontestForm').classList.add('hidden')
     })
}





</script>

<%-include('partials/footer')%>